doctype html
html
    head
        title Cite

        meta(charset="UTF-8")
        meta(name="description", content="Free MLA citations without ads.")
        meta(name="keywords", content="citation,MLA,free")
        meta(name="author", content="Finn Bear")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        link(rel='stylesheet', href='https://www.softbear.com/bootstrap/dist/css/bootstrap.min.css')
    body(style="background-color: #2c3e50")
        block content
        if login
            div(style="position: absolute; width: 100%; bottom: 0px; text-align: center;")
                small(class="text-muted") Logged in as #{login.name} -
                    a(href="/logout") Logout