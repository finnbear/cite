extends layout

block content
    br
    div(style="text-align: center;")
            div(style="display: inline-block; width: 282px; padding: 15px 30px 25px; margin: auto; background-color: #ffffff; border: 1px solid rgba(0, 0, 0, 0.1);")
                if profile
                    h3(style="margin-bottom: 20px;") Profile
                    hr
                    table(class="table-borderless", style="width:100%; text-align: left;")
                        tr
                            td
                                strong Name
                            td=profile.name
                        tr
                            td
                                strong Citations
                            td=profile.citationCount
                        tr
                            td
                                strong Type
                            td!=(profile.priviledge == 1 ? "<a href='/admin'>Administrator</a>" : "Standard user")
                    hr
                else
                    h4(style="margin-bottom: 20px;") Access denied
                form(action="/cite", method="get")
                    button(type="submit", class="btn btn-primary", style="width:85%; margin: auto;") Back